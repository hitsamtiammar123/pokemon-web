{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "no-undef":"error",
        "eqeqeq":"error",
        "react/display-name": "off",
        "prettier/prettier": [
            "error", 
            {
                "singleQuote": true
            }
        ],
        "react/prop-types": "warn",
        "no-unused-vars":"warn",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
